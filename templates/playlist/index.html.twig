{% extends 'base.html.twig' %}

{% block title %}Hello PlaylistController!{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/assets/css/playlist.css">
<link rel="stylesheet" href="/assets/css/player.css">
{% endblock %}



{% block main %}

<div class="example_wrapper">
    <div class="playlist_container">
        <!-- wrap the playlist in a container to allow it to scroll -->
        <div class="playlist">
            <div class="track">
                <hr>
                <b>Jackson 5</b> - Eye of the tiger 1
            </div>
            <div class="track">
                <hr>
                <b>Jackson 5</b> - Eye of the tiger 1
            </div>
            <div class="track">
                <hr>
                <b>Jackson 5</b> - Eye of the tiger 1
            </div>
            <div class="track">
                <hr>
                <b>Jackson 5</b> - Eye of the tiger 1
            </div>
            <div class="track">
                <hr>
                <b>Jackson 5</b> - Eye of the tiger 1
            </div>
            <div class="track playing">
                <hr>
                <b>Jackson 5</b> - Eye of the tiger 1
            </div>


        </div>
    </div>

    <div class="audio-player" style="margin: 0 auto">
        <!-- see https://codeconvey.com/customize-html5-audio-player-css/ -->
        <div class="timeline">
          <div class="progress"></div>
        </div>
        <div class="controls">
          <div class="play-container">
            <div class="toggle-play play">
          </div>
          </div>
          <div class="time">
            <div class="current">0:00</div>
            <div class="divider">/</div>
            <div class="length"></div>
          </div>
          <div class="name">Eye of the tiger</div>
      <!--     credit for icon to https://saeedalipoor.github.io/icono/ -->
          <div class="volume-container">
            <div class="volume-button">
              <div class="volume icono-volumeMedium"></div>
            </div>
            
            <div class="volume-slider">
              <div class="volume-percentage"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script  src="/assets/js/player.js"></script>

    <div class="search_btn">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-search" width="44" height="44" viewBox="0 0 24 24" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <circle cx="10" cy="10" r="7" />
            <line x1="21" y1="21" x2="15" y2="15" />
        </svg>
    </div>

</div>



{% endblock %}